<Window x:Class="pokemon_like.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pokemon_like"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Connect DB" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ConnectButton_Click" Margin="0,200,0,0" Style="{StaticResource PokemonButtonStyle}"/>
        <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Click="LoginButton_Click" Margin="0,230,0,0" Style="{StaticResource PokemonButtonStyle}"/>
        <Button Content="Signup" HorizontalAlignment="Center" VerticalAlignment="Top" Click="SignupButton_Click" Margin="0,260,0,0" Style="{StaticResource PokemonButtonStyle}"/>
    </Grid>
</Window>
