<Window x:Class="PokemonLike.Views.SpellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spell Details" Height="300" Width="400">
    <Grid>
        <TextBlock x:Name="SpellName" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" />
        <TextBlock x:Name="SpellDamage" TextWrapping="Wrap" Margin="10,40,10,10" VerticalAlignment="Top" />
        <TextBlock x:Name="SpellDescription" TextWrapping="Wrap" Margin="10,55,10,10" VerticalAlignment="Top" />
        <Button Content="Close" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Click="CloseButton_Click" />
    </Grid>
</Window>
